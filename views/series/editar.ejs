<%- include ../partials/header %>
<header class="bg-info text-white">
    <div class="container text-center">
        <h1><img src="/images/logo.png" alt="Minhas Séries" /></h1>
        <p class="lead">Gerencie suas séries com Express + Mongo + NodeJS</p>
    </div>
</header>

<section id="about">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item active">Editar série</li>
                    </ol>
                </nav>
                <h2>Editar série</h2>
                <% if(errors && errors.indexOf('name')>=0){ %>
                <div class="alert alert-danger" role="alert">
                    Por favor, informar o nome da série!
                </div>
                <% } %>
                <form action="/editar/<%= serie.id %>" method="POST">
                    <div class="form-group">
                        <label>Nome da série</label>
                        <input type="text" class="form-control" name="name" placeholder="Informe o nome da série" value="<%= serie.name %>" />
                    </div>
                    <div class="form-group">
                        <label>Situação</label>
                        <select class="form-control" name="status">
                            <option <%=serie.status=="to-watch" ? 'selected' : '' %> value="to-watch">Para assistir</option>
                            <option <%=serie.status=="watching" ? 'selected' : '' %> value="watching">Assistindo</option>
                            <option <%=serie.status=="watched" ? 'selected' : '' %> value="watched">Assistido</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-info">Alterar</button>
                </form>
            </div>
        </div>
    </div>
</section>
<%- include ../partials/footer %>