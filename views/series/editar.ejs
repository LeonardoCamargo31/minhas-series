<%- include ../partials/header %>
<section id="about">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <h2>Nova série</h2>
                <form action="/series/editar/<%= serie.id %>" method="POST">
                    <div class="form-group">
                        <label>Nome da série</label>
                        <input type="text" class="form-control" name="name" placeholder="Informe o nome da série"  value="<%= serie.name %>"/>
                    </div>
                    <div class="form-group">
                        <label>Situação</label>
                        <select class="form-control" name="status">
                            <option <%= serie.status=="to-watch" ? 'selected' : ''  %> value="to-watch">Para assistir</option>
                            <option <%= serie.status=="watching" ? 'selected' : ''  %> value="watching">Assistindo</option>
                            <option <%= serie.status=="watched" ? 'selected' : ''  %> value="watched">Assistido</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-info">Salvar</button>
                </form>
            </div>
        </div>
    </div>
</section>
<%- include ../partials/footer %>