<%- include ../partials/header %>
<header class="bg-info text-white">
    <div class="container text-center">
        <h1><img src="/images/logo.png" alt="Minhas Séries" /></h1>
        <p class="lead">Gerencie suas séries com Express + Mongo + NodeJS</p>
    </div>
</header>

<section id="about">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <h2>Sobre</h2>
                <p class="lead">Todas as séries cadastradas<a href="/series/nova" class="btn btn-info">Nova Série</a></p>
                <table class="table table-hover">
                    <% series.forEach(serie=>{%>
                        <tr>
                            <td><%= serie.name %></td>
                            <td>
                                <% if(serie.status == 'to-watch') { %>
                                    <span class="badge badge-secondary">Para assistir</span>
                                <% } else if(serie.status == 'watching') { %>
                                    <span class="badge badge-secondary">Assistindo</span>
                                <% } else if(serie.status == 'watched') { %>
                                    <span class="badge badge-secondary">Assistido</span>
                                <% } %>
                            </td>
                            <td><a class="btn btn-info" href="/series/editar/<%= serie.id %>">Editar</a></td>
                            <td><a class="btn btn-danger" href="/series/excluir/<%= serie.id %>">Excluir</a></td>
                        </tr>
                    <% })%>
                </table>
            </div>
        </div>
    </div>
</section>
<%- include ../partials/footer %>